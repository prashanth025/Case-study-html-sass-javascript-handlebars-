  <!-- The Modal -->
    
    <div id="modal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">My Cart <span class="cart-count">({{cartListItems.length}} item)</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="close">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                 {{#each cartListItems as | cartItem|}}
                    <div class="cart-item">
                        <div class="cart-item-img">
                            <img src="{{cartItem.imageURL}}">
                        </div>
                        <div class="cart-item-info">
                            <h5>{{cartItem.name}}</h5>
                            <div class="cart-item-add">
                                <span class="sub counter" data-item-price='{{cartItem.price}}' data-event='sub'>-</span>
                                <span class="add counter" data-item-price='{{cartItem.price}}' data-event='add'>+</span>
                                <span class="total">
                                    x Rs.{{ cartItem.price}}
                                </span>
                            </div>
                        </div>
                        <div class="cart-item-amt">
                            Rs.{{ cartItem.price}}
                        </div>
                    </div>
                      {{/each}}
              </div>
              <div class="modal-footer">
                  <p>promo code can be applied on payment</p>
                  <div class="proceed-to-payment">
                      <p>Proceed to checkout </p> <span>Rs. {{totalAmount}} ></span>
                  </div>
              </div>
        </div>

    </div>